<idea-plugin>
    <id>com.github.jamesfchen.modulemanager</id>
    <name>module-manager</name>
    <vendor>jamesfchen</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.jamesfchen.modulemanager.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.jamesfchen.modulemanager.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.jamesfchen.modulemanager.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
